@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            <a href="/Manage" title="Manage"><i class="fa fa-user"></i>&nbsp; Hello @User.Identity.GetUserName()!</a>
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()"><i class="fa fa-sign-in"></i>&nbsp; Log off</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li><a href="/Account/Register" id="registerLink"><i class="fa fa-pencil-square-o"></i>&nbsp; Register</a></li>
        <li><a href="/Account/Login" id="loginLink"><i class="fa fa-sign-in"></i>&nbsp; Log In</a></li>
    </ul>
}
